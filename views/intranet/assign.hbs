<div class="container-fluid mt-5">
  <div class="row">
    <div class="col-sm-1">
    </div>
    <div class="col-sm-11"></div>
  </div>

  <div class="row">
    <div class="col-sm-2">
      <div class="navbar bg-light navbar-dark">
        <ul class="nav flex-column">
          <li class="nav-item">
            <a class="nav-link" href="/intranet/admin-dashboard">Return to your
              dashboard</a>
          </li>
        </ul>
      </div>
    </div>

    <div class="col-sm-6">
      <section>
        <form action="/intranet/{{post._id}}/assign/send" method="post">
          <fieldset>
            <legend class="h2">Details of the customer question</legend>
            <label>Category</label>
            <input
              type="text"
              name="category"
              value="{{post.category}}"
              readonly
            />
            <br />

            <label>Question</label>
            <textarea
              rows="5"
              cols="30"
              name="postText"
              readonly
            >{{post.postText}}</textarea>
            <br />

            <label>Company Name</label>
            <input
              type="text"
              name="companyName"
              value="{{post.postUserId.companyName}}"
              readonly
            />
            <br />

            <label>Name</label>
            <input
              type="text"
              name="name"
              value="{{post.postUserId.userName}}"
              readonly
            />
            <br />

            <label>Email</label>
            <input
              type="text"
              name="email"
              value={{post.postUserId.email}}
              readonly
            />
            <br />

            <label>Phone Number</label>
            <input
              type="number"
              name="phoneNumber"
              value="{{post.postUserId.phoneNumber}}"
              readonly
            />
            <br />

            <label>Location</label>
            <input
              type="text"
              name="location"
              value="{{post.postUserId.location}}"
              readonly
            />
            <br />

            <label>Business</label>
            <input
              type="text"
              name="business"
              value="{{post.postUserId.business}}"
              readonly
            />
            <br />

            <label>Job Title</label>
            <input
              type="text"
              name="jobTitle"
              value="{{post.postUserId.jobTitle}}"
              readonly
            />
            <br />

            <label>Date</label>
            <input type="text" name="created" value="{{created}}" readonly />
            <br />

            <label>Assigned to</label>
            <input
              type="text"
              name="assignedTo"
              value="{{post.assignedTo.userName}}"
              readonly
            />
            <br />
            <br />

            <button type="submit">Send to the Assigned Person</button>
          </fieldset>
        </form>

        {{#if errorMessage}}
          <p style="color:red">{{errorMessage}}</p>
        {{/if}}
      </section>
    </div>
  </div>
</div>