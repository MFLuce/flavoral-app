<h1>The post was assigned</h1>

<section>
  <form>
    <fieldset>
      <legend>Details of the customer question</legend>
      <label> Category</label>
      <input type="text" name="category" value="{{post.category}}" readonly />
      <br />

      <label> Question</label>
      <input type="text" name="category" value="{{post.postText}}" readonly />
      <br />

      <label> Company Name</label>
      <input
        type="text"
        name="companyName"
        value="{{post.postUserId.companyName}}"
        readonly
      />
      <br />

      <label> Name</label>
      <input
        type="text"
        name="name"
        value="{{post.postUserId.userName}}"
        readonly
      />
      <br />

      <label> Date</label>
      <input type="text" name="created" value="{{post.created}}" readonly />
      <br />

      <label> Answered</label>
      <input type="text" name="answered" value="{{post.isResolved}}" readonly />
      <br />
      <label> Assigned to</label>
      <input
        type="text"
        name="assigned"
        value="{{post.assignedTo.userName}}"
        readonly
      />
      <br />
      <br />

      <button type="submit">Send to the Assigned Person</button>
    </fieldset>
  </form>

  {{#if errorMessage}}
    <p style="color:red">{{errorMessage}}</p>
  {{/if}}
</section>