<section>
   <form action="/auth/login" method="POST">
   <fieldset>
      <legend>Log In</legend>
   <label> Email
      <input type="text" name="email" autofocus>
   </label>
   <label> Password
      <input type="password" name="password">
   </label>
<br>
   <button type="submit">Submit</button>
   </fieldset>
</form>
{{#if errorMessage}}
  <p style="color:red">{{errorMessage}}</p>
{{/if}}
</section>


   
